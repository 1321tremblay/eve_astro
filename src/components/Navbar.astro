---
import ModalRDV from "./ModalRDV.astro";
---

<script>
    function toggleHidden() {
        const checkbox = document.getElementById("toggleCheckbox");
        const hiddenDiv = document.getElementById("toggleDiv");

        checkbox.addEventListener("click", function () {
            hiddenDiv.classList.toggle("hidden");
            hiddenDiv.classList.toggle("flex");
            console.log("Toggled!");
        });
    }

    toggleHidden();
</script>

<div class="flex justify-center px-4">
    <nav class="navbar bg-inherit">
        <div class="navbar-start">
            <label class="btn btn-circle swap swap-rotate lg:hidden">
                <!-- this hidden checkbox controls the state -->
                <input type="checkbox" id="toggleCheckbox" />

                <!-- hamburger icon -->
                <svg
                    class="swap-off fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 512 512"
                >
                    <path
                        d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"
                    ></path>
                </svg>

                <!-- close icon -->
                <svg
                    class="swap-on fill-current"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 512 512"
                >
                    <polygon
                        points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49"
                    ></polygon>
                </svg>
            </label>

            <div class="flex-1 px-2 mx-2 rounded">
                <a href="/"
                    ><img class="h-14" src="/placeholder.svg" alt="" /></a
                >
            </div>
            <div
                class="hidden absolute top-16 left-0 w-full justify-center z-50 bg-base-100"
                id="toggleDiv"
            >
                <nav>
                    <ul>
                        <li>
                            <a class="btn btn-ghost" href="/techniques/"
                                >Les techniques</a
                            >
                        </li>
                        <li>
                            <a class="btn btn-ghost" href="/fertilite/"
                                >Fertilite</a>
                        </li>
                        <li>
                            <a class="btn btn-ghost" href="/pertedepoids/"
                                >Perte de poids</a
                            >
                        </li>
                        <li>
                            <a class="btn btn-ghost" href="/bio/">A propos</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="navbar-center hidden lg:flex"></div>
        <div class="navbar-end gap-4">
            <div class="hidden lg:flex">
                <div tabindex="0" role="button" class="btn m-1">
                    <a href="/fertilite/">Fertilite</a>
                </div>
                <div tabindex="0" role="button" class="btn m-1">
                    <a href="/pertedepoids/">Perte de poids</a>
                </div>

                <div tabindex="0" role="button" class="btn m-1">
                    <a href="/techniques/">Les techniques</a>
                </div>

                <div tabindex="0" role="button" class="btn m-1">
                    <a href="/bio/">A propos</a>
                </div>
            </div>
            <ModalRDV />
        </div>
    </nav>
</div>
